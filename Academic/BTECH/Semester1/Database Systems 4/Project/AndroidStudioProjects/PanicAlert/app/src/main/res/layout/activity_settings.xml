<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GridLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/imagess"

    android:columnCount="3"
    android:orientation="vertical"
    android:rowCount="34"
    tools:context="com.app.panicalert.eusuph.panicalert.settings">

    <EditText
        android:id="@+id/securityNumber1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_marginBottom="5dp"
        android:layout_row="0"
        android:background="@drawable/edittextstyle"
        android:hint="Emergency List"
        android:padding="10dp"
        android:verticalSpacing="10px" />

    <EditText
        android:id="@+id/contactNumber2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_marginBottom="5dp"
        android:layout_row="1"
        android:background="@drawable/edittextstyle"
        android:hint="Click to add contact 3"
        android:padding="10dp"
        android:verticalSpacing="0px" />

    <EditText
        android:id="@+id/contactNumber3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_marginBottom="5dp"
        android:layout_row="2"
        android:background="@drawable/edittextstyle"
        android:hint="Click to add contact 3"
        android:padding="10dp"
        android:verticalSpacing="0px" />

    <Button
        android:id="@+id/editSMS"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_column="0"
        android:layout_row="33"
        android:background="@drawable/my_button"
        android:text="Edit Sms" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:layout_column="0"
        android:layout_row="32"
        android:background="@drawable/my_button"
        android:text="Save" />

</GridLayout>
